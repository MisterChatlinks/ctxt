{
   "name": "monitext",
   "version": "3.0.0",
   "description": "A modern logger with policies, theming, and runtime resilience",
   "type": "commonjs",
   "types": "./lib/sdk/index.d.ts",
   "exports": {
      "types": "./lib/sdk/index.d.ts",
      "require": "./lib/sdk/monitext.cjs.min.cjs",
      "import": "./lib/sdk/monitext.esm.min.mjs"
   },
   "bin": {
      "monitext": "./lib/cli/monicli.cjs.min.cjs"
   },
   "keywords": [
      "logger",
      "log",
      "structured-logging",
      "observability",
      "logging-library",
      "log-formatting",
      "log-levels",
      "monitoring",
      "policy-based-logger",
      "policy-logging",
      "cli",
      "terminal",
      "console",
      "browser",
      "node",
      "deno",
      "bun",
      "typescript",
      "ts"
   ],
   "scripts": {
      "check": "npx tsc -p tsconfig.build.json -noEmit",
      "test": "npx vitest run --config vite.config.ts",
      "types": "npx tsc -p tsconfig.build.json && npx tsc-alias -p tsconfig.build.json",
      "bundle:types": "npx dts-bundle-generator -o ./lib/sdk/index.d.ts ./lib/types/src-sdk/index.d.ts",
      "bundle": "npx node ./esbuild.sdk.cjs",
      "build:sdk": "npm run check && npm run test && npm run types && npm run bundle:types && npm run bundle",
      "build:cli": "npx node ./esbuild.cli.cjs"
   },
   "author": "Catlinks",
   "license": "MIT",
   "dependencies": {
      "acorn": "^8.15.0",
      "astring": "^1.9.0",
      "chalk": "^5.4.1",
      "estree-walker": "^3.0.3"
   },
   "files": [
      "lib",
      "README.md",
      "LICENSE"
   ],
   "repository": {
      "type": "git",
      "url": "https://github.com/MisterChatlinks/monitor-txt.git"
   },
   "devDependencies": {
      "@types/bun": "^1.2.18",
      "@types/deno": "^2.3.0",
      "@types/node": "^24.0.12",
      "commander": "^14.0.0",
      "cytoscape": "^3.32.1",
      "dts-bundle-generator": "^9.5.1",
      "esbuild": "^0.25.6",
      "inquirer": "^12.6.0",
      "tsc-alias": "^1.8.16",
      "typescript": "^5.8.3",
      "vite": "^7.0.4",
      "vite-tsconfig-paths": "^5.1.4",
      "vitest": "^3.2.4"
   }
}
