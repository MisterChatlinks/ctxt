{
   "name": "monitext",
   "version": "3.0.0",
   "description": "A modern logger with policies, theming, and runtime resilience",
   "type": "commonjs",
   "types": "./lib/index.d.ts",
   "exports": {
      "types": "./lib/index.d.ts",
      "require": "./lib/monitext.cjs.min.cjs",
      "import": "./lib/monitext.esm.min.mjs"
   },
   "bin": {
      "monitext": "npx node ./lib/cli/index.js"
   },
   "keywords": [
      "logger",
      "monitor",
      "policy",
      "structured",
      "logging",
      "browser",
      "cli",
      "cross plateform"
   ],
   "scripts": {
      "check": "npx tsc -noEmit",
      "test": "npx vitest run --config vite.config.ts",
      "types": "npx tsc && npx tsc-alias",
      "bundle:types": "npx dts-bundle-generator -o ./lib/index.d.ts ./lib/types/sdk/src/index.d.ts",
      "bundle": "npx node ./esbuild.config.cjs",
      "build": "npm run check && npm run test && npm run types && npm run bundle:types && npm run bundle"
   },
   "author": "Catlinks",
   "license": "MIT",
   "dependencies": {
      "acorn": "^8.15.0",
      "astring": "^1.9.0",
      "chalk": "^5.4.1",
      "cytoscape": "^3.32.1",
      "estree-walker": "^3.0.3"
   },
   "files": [
      "lib",
      "README.md",
      "LICENSE"
   ],
   "repository": {
      "type": "git",
      "url": "https://github.com/MisterChatlinks/monitor-txt.git"
   },
   "devDependencies": {
      "inquirer": "^12.6.0",
      "@types/bun": "^1.2.18",
      "@types/deno": "^2.3.0",
      "@types/node": "^24.0.12",
      "dts-bundle-generator": "^9.5.1",
      "esbuild": "^0.25.6",
      "tsc-alias": "^1.8.16",
      "typescript": "^5.8.3",
      "vite": "^7.0.4",
      "vite-tsconfig-paths": "^5.1.4",
      "vitest": "^3.2.4"
   }
}