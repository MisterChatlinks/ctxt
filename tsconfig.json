{
   "compilerOptions": {
      "target": "ES2017",
      "module": "ES2022",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "lib",
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": false,
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "rewriteRelativeImportExtensions": true
   },
   "include": [
      "src/**/*.ts",
      "src-cli/**/*.ts",
      "var.ts"
   ]
}